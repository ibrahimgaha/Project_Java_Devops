pipeline {
    agent any
    
    tools {
        maven "mvn" // Maven tool configured in Jenkins
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/ibrahimgaha/Project_Java_Devops'
            }
        }

        stage('Setup Environment') {
            steps {
                echo 'Setting up Maven environment...'
                bat 'mvn -version' // Use sh for Windows; replace with `sh` for Linux agents
            }
        }
        
        stage('Compile') {
            steps {
                echo 'Compiling the application...'
                bat 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Package') { 
            steps {
                echo 'Packaging the application...'
                bat 'mvn package -DskipTests'
            }
        }
        
        stage('Print Working Directory') {
            steps {
                bat 'echo Current directory: $(pwd)'
            }
        }
        
        stage('Run Docker Compose') {
            steps {
                dir("app") {
                    bat "docker-compose up -d" // Adjust path if docker-compose.yml is elsewhere
                }
            }
        }
         
        stage('Deploy - Staging') {
            steps {
                echo 'Deploying to Kubernetes (Staging)...'
                script {
                    dir("k8s") { // Assuming Kubernetes scripts are in the 'k8s' directory of your repository
                        echo 'Applying Kubernetes manifests for staging...'
                        bat 'kubectl apply -f deployment.yaml'
                    }
                }
            }
        }
       
        stage('Deploy - Production') {
            steps {
                echo 'Deploying to Kubernetes (Production)...'
                script {
                    dir("k8s") { // Assuming a separate Kubernetes configuration for production
                        echo 'Applying Kubernetes manifests for production...'
                       bat 'kubectl apply -f deployment.yaml'
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished. Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}
