pipeline {
    agent any
    
    tools {
        maven "mvn" // Maven tool configuré dans Jenkins
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/ibrahimgaha/Project_Java_Devops'
            }
        }

        stage('Setup Environment') {
            steps {
                echo 'Setting up Maven environment...'
                sh 'mvn -version' // Utilisez `bat` pour Windows
            }
        }
        
        stage('Compile') {
            steps {
                echo 'Compiling the application...'
                sh 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Package') { 
            steps {
                echo 'Packaging the application...'
                sh 'mvn package -DskipTests'
            }
        }
        
        stage('Print Working Directory') {
            steps {
                sh 'echo Current directory: $(pwd)'
            }
        }
        
        stage('Run Docker Compose') {
            steps {
                dir("app") {
                    echo 'Running Docker Compose...'
                    sh "docker-compose up -d" // Vérifiez le chemin du fichier
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Ajoutez ici des étapes de déploiement si nécessaire
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished. Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}
